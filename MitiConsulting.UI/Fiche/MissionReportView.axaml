<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MitiConsulting.UI.Fiches.ViewModels"  
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="1000"
             x:Class="MitiConsulting.UI.Views.MissionReportView"
             x:DataType="vm:RapportFormViewModel"
             >

    <ScrollViewer>
        <!-- Grid avec une colonne centrÃ©e pour simuler le 90% -->
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/> <!-- 5% de chaque cÃ´tÃ© -->
                <ColumnDefinition Width="75*"/> <!-- 90% pour le formulaire -->
                <ColumnDefinition Width="15*"/> <!-- 5% de chaque cÃ´tÃ© -->
            </Grid.ColumnDefinitions>
            
            <!-- Conteneur principal avec ombre -->
            <Border Grid.Column="1" MaxWidth="1200" HorizontalAlignment="Stretch"
                    x:Name="FormContainer">
                
                <StackPanel Margin="0">
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,30">
                        <StackPanel>
                            <TextBlock Text="Formulaire de Fiche de Projet" Classes="MainTitle"/>
                            <TextBlock Text="Remplissez les informations ci-dessous pour documenter la mission" 
                                       Foreground="{StaticResource BlackLabel}" 
                                       Opacity="0.7" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <Separator Margin="0,0,0,15" Background="{StaticResource DarkGrayBorder}"/>
                    
                    <TextBlock Text="Informations sur la mission" Classes="SectionHeader"/>
                    
                    <Grid ColumnDefinitions="*, 20, *" RowDefinitions="Auto, Auto, Auto, Auto" RowSpacing="15" ColumnSpacing="20">
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="1. Nom de la mission *" Classes="FieldLabel"/>
                        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Watermark="Entrez le nom de la mission" 
                                 Text="{Binding NomRapport}"/>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="2. Pays *" Classes="FieldLabel"/>
                            <TextBox Watermark="Ex: Madagascar" Text="{Binding Pays}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="2">
                            <TextBlock Text="8. Lieu de la mission *" Classes="FieldLabel"/>
                            <TextBox Watermark="Ex: Tsy haiko izay atao eto" Text="{Binding LieuxMission}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0">
                            <TextBlock Text="3. AnnÃ©e de dÃ©but *" Classes="FieldLabel"/>
                            <NumericUpDown Watermark="Ex:2024" Value="{Binding AnneeDebut}" FormatString="0">
                                <NumericUpDown.Styles>
                                    <Style Selector="NumericUpDown">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#757575"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="CornerRadius" Value="4"/>
                                        <Setter Property="Foreground" Value="#424242"/>
                                    </Style>
                                </NumericUpDown.Styles>
                            </NumericUpDown>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Grid.Column="2">
                            <TextBlock Text="4. AnnÃ©e de fin" Classes="FieldLabel"/>
                            <NumericUpDown Watermark="Ex:2025" Value="{Binding AnneeFin}" FormatString="0">
                                <NumericUpDown.Styles>
                                    <Style Selector="NumericUpDown">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#757575"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="CornerRadius" Value="4"/>
                                        <Setter Property="Foreground" Value="#424242"/>
                                    </Style>
                                </NumericUpDown.Styles>
                            </NumericUpDown>
                        </StackPanel>
                    </Grid>
                    
                    <Grid ColumnDefinitions="*, 20, *" RowDefinitions="Auto, Auto" RowSpacing="15" ColumnSpacing="20" Margin="0,15,0,0">
                        
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="13. Date de dÃ©marrage *" Classes="FieldLabel"/>
                            <DatePicker SelectedDate="{Binding DateDebut}" VerticalAlignment="Center">
                                <DatePicker.Styles>
                                    <Style Selector="DatePicker">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#757575"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="CornerRadius" Value="4"/>
                                        <Setter Property="Foreground" Value="#424242"/>
                                    </Style>
                                </DatePicker.Styles>
                            </DatePicker>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="2">
                            <TextBlock Text="14. Date d'achÃ¨vement" Classes="FieldLabel"/>
                            <DatePicker SelectedDate="{Binding DateFin}" VerticalAlignment="Center">
                                <DatePicker.Styles>
                                    <Style Selector="DatePicker">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#757575"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="CornerRadius" Value="4"/>
                                        <Setter Property="Foreground" Value="#424242"/>
                                    </Style>
                                </DatePicker.Styles>
                            </DatePicker>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="11. Nombre de mois de travail" Classes="FieldLabel"/>
                            <NumericUpDown Watermark="Ex:3" Value="{Binding NombreMoisTravail}" FormatString="0">
                                <NumericUpDown.Styles>
                                    <Style Selector="NumericUpDown">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#757575"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="CornerRadius" Value="4"/>
                                        <Setter Property="Foreground" Value="#424242"/>
                                    </Style>
                                </NumericUpDown.Styles>
                            </NumericUpDown>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="2">
                            <TextBlock Text="12. Nombre de mois de mission" Classes="FieldLabel"/>
                            <NumericUpDown Watermark="Ex:3" Value="{Binding NombreMoisMission}" FormatString="0">
                                <NumericUpDown.Styles>
                                    <Style Selector="NumericUpDown">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#757575"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="CornerRadius" Value="4"/>
                                        <Setter Property="Foreground" Value="#424242"/>
                                    </Style>
                                </NumericUpDown.Styles>
                            </NumericUpDown>
                        </StackPanel>
                    </Grid>
                    
                    <Separator Margin="0,30,0,10" Background="{StaticResource DarkGrayBorder}"/>

                    <TextBlock Text="Informations client" Classes="SectionHeader"/>
                    
                    <StackPanel Spacing="15">
                        <StackPanel>
                            <TextBlock Text="5. Nom du client *" Classes="FieldLabel"/>
                            <TextBox Watermark="Nom de l'entreprise ou organisation" Text="{Binding NomClient}"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="6. Adresse *" Classes="FieldLabel"/>
                            <TextBox Watermark="Adresse complÃ¨te du client" AcceptsReturn="True" Height="70" Text="{Binding Adresse}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Separator Margin="0,30,0,10" Background="{StaticResource DarkGrayBorder}"/>

                    <TextBlock Text="Ressources et financement" Classes="SectionHeader"/>
                    
                    <StackPanel Spacing="15">
                        <StackPanel>
                            <TextBlock Text="7. Personnel spÃ©cialisÃ© fourni" Classes="FieldLabel"/>
                            <TextBox Watermark="Liste du personnel spÃ©cialisÃ© fourni pour cette mission" AcceptsReturn="True" Height="70" Text="{Binding Financement}"/>
                        </StackPanel>

                        <Grid ColumnDefinitions="*, 20, *" ColumnSpacing="20">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="9. Nombre d'employÃ©s participants" Classes="FieldLabel"/>
                                <NumericUpDown Watermark ="Ex:6" Value="{Binding NombreEmploye}" FormatString="0">
                                    <NumericUpDown.Styles>
                                        <Style Selector="NumericUpDown">
                                            <Setter Property="Background" Value="#E0E0E0"/>
                                            <Setter Property="BorderBrush" Value="#757575"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Padding" Value="10"/>
                                            <Setter Property="CornerRadius" Value="4"/>
                                            <Setter Property="Foreground" Value="#424242"/>
                                        </Style>
                                    </NumericUpDown.Styles>
                                </NumericUpDown>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="15. Nom du consultant associÃ©" Classes="FieldLabel"/>
                                <TextBox Watermark="Ex:Unicef" Text="{Binding NomAssocie}"/>
                            </StackPanel>
                        </Grid>

                        <Grid ColumnDefinitions="*, 20, *" ColumnSpacing="20">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="9. Source de financement" Classes="FieldLabel"/>
                                <TextBox Watermark="Ex:Unicef" Text="{Binding Financement}"/>
                                
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="15. Montant" Classes="FieldLabel"/>
                                 <NumericUpDown Watermark="Ex:10000" Value="{Binding Montant}" FormatString="0">
                                <NumericUpDown.Styles>
                                    <Style Selector="NumericUpDown">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="BorderBrush" Value="#757575"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Padding" Value="10"/>
                                        <Setter Property="CornerRadius" Value="4"/>
                                        <Setter Property="Foreground" Value="#424242"/>
                                    </Style>
                                </NumericUpDown.Styles>
                            </NumericUpDown>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Separator Margin="0,30,0,10" Background="{StaticResource DarkGrayBorder}"/>

                    <TextBlock Text="Description de la mission" Classes="SectionHeader"/>
                    
                    <StackPanel Spacing="15">
                        <StackPanel>
                            <TextBlock Text="17. Description du projet *" Classes="FieldLabel"/>
                            <TextBox Watermark="DÃ©crivez en dÃ©tail le projet et ses objectifs..." AcceptsReturn="True" Height="100" Text="{Binding DescriptifProjet}"/>
                        </StackPanel>
                        
                        <StackPanel>
                            <TextBlock Text="18. Description des actvitÃ©s rÃ©alisÃ©es *" Classes="FieldLabel"/>
                            <TextBox Watermark="DÃ©crivez les services et prestations qui ont Ã©tÃ© rÃ©alisÃ©s..." AcceptsReturn="True" Height="100" Text="{Binding DescriptionServices}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Separator Margin="0,30,0,10" Background="{StaticResource DarkGrayBorder}"/>

                    <StackPanel Margin="0,30,0,0" HorizontalAlignment="Center" Spacing="15">
                        <!-- Bouton Soumettre -->
                <Grid Margin="0,30,0,0" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>   
    
                    <!-- Bouton Soumettre -->
                    <Button Grid.Column="0"
                            Content="ðŸš€ Soumettre le rapport" 
                            Classes="primary-btn"
                            Command="{Binding AjouterRapport}"
                            Height="45"
                            Background="Black"
                            Foreground="White"
                            FontWeight="SemiBold"
                            FontSize="15"
                            CornerRadius="4"
                            BorderThickness="0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            HorizontalAlignment="Stretch"/>
                    
                    <!-- Bouton Annuler -->
                    <Button Grid.Column="2"
                            Content="Annuler"
                            Height="45"
                            Background="Transparent"
                            Foreground="{StaticResource BlackLabel}"
                            BorderBrush="{StaticResource DarkGrayBorder}"
                            BorderThickness="2"
                            FontWeight="SemiBold"
                            FontSize="15"
                            CornerRadius="4"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            HorizontalAlignment="Stretch"/>
                    
                    <!-- Texte "Champs obligatoires" alignÃ© Ã  droite -->
                    </Grid>
                        
                        <!-- Texte "Champs obligatoires" -->
                        <TextBlock Text="* Champs obligatoires" 
                                   Classes="RequiredFieldText"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>